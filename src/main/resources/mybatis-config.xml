<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<!-- 实体类,简称 -设置别名 -->
	<typeAliases>
		<!-- 将com.lcvc.ebuytest3.model.Admin类重新起一个名字Admin，供mybatis的映射文件使用 -->
		<typeAlias alias="Admin" type="com.lyxm.lychengdu.model.Admin"/>
		<typeAlias alias="User" type="com.lyxm.lychengdu.model.User"/>
		<typeAlias alias="Strategy" type="com.lyxm.lychengdu.model.Strategy"/>
	</typeAliases>

	<mappers>
		<!--注册adminMappe.xml文件 -->
	    <mapper resource="com/lyxm/lychengdu/dao/mapper/adminMapper.xml"/>
		<mapper resource="com/lyxm/lychengdu/dao/mapper/userMapper.xml"/>
		<mapper resource="com/lyxm/lychengdu/dao/mapper/strategyMapper.xml"/>
	</mappers>


</configuration>  